<!DOCTYPE html>
<html>
<head>
  <title>Dfp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>

  <% if current_user %>
    <%= link_to "Lines", root_path %> |
    <%= link_to "FanDuel", fanduel_path %> |
    <%= link_to "DraftKings", draftkings_path %> |
    <%= link_to "Team Stats", teams_path %> |
    <%= link_to "Sign Out", destroy_user_session_path %>
  <% else %>
    <%= link_to "Sign In", new_user_session_path %> |
    <%= link_to "Sign Up", new_user_registration_path %>
  <% end %>

</nav>

<% if flash[:alert] %>
  <div class="alert">
    <%= alert %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
