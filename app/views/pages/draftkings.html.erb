<h2> Pitchers </h2>

<table class="table table-responsive table-striped">
<thead>
<tr>
  <th> Player </th>
  <th> Team </th>
  <th> Position </th>
  <th> DK Salary </th>
  <th> DK Season Pts/Game </th>
  <th> YTD DK Pts/$1000 </th>
  <th> Exp Pts/Game </th>
  <th> Pts/$ </th>
  <th> Opponent </th>
  <th> Select </th>
</tr>
</thead>

<% @pitchers.each do |pitcher| %>
  <tr>
    <td> <%= pitcher.name %> </td>
    <td> <%= pitcher.team.name %> </td>
    <td> P </td>
    <td> <%= pitcher.display_dk_salary %> </td>
    <td> <%= pitcher.dk_season_ppg %> </td>
    <td> <%= pitcher.ytd_dk_pts_per_1000_dollars %> </td>
    <td> <%= sprintf('%.2f', pitcher.zips_dk_pts_per_game) %> </td>
    <td> <%= pitcher.zips_dk_pts_per_1000_dollars %> </td>
    <td> <%= pitcher.opponent %> </td>
    <td><%= check_box_tag "pitcher_ids[]", pitcher.id %></td>
  </tr>
<% end %>
</table>

